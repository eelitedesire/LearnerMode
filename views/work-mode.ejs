        },
        'grid_trickle_feed': {
            display: 'Grid Trickle Feed',
            type: 'number',
            min: 0,
            max: 100,
            step: 1,
            unit: '%'
        },
        'output_shutdown_voltage': {
            display: 'Output Shutdown Voltage',
            type: 'number',
            min: 40,
            max: 60,
            step: 0.1,
            unit: 'V'
        },
        'stop_battery_discharge_voltage': {
            display: 'Stop Battery Discharge Voltage',
            type: 'number',
            min: 40,
