        'force_generator_on': {
            display: 'Force Generator On',
            type: 'select',
            options: [
                { value: 'Enabled', label: 'Enabled' },
                { value: 'Disabled', label: 'Disabled' }
            ]
        },
        'solar_export_when_battery_full': {
            display: 'Solar Export When Battery Full',
            type: 'select',
            options: [
                { value: 'Enabled', label: 'Enabled' },
