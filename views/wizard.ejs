    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 var(--spacer);
    font-size: 1rem;
    font-weight: var(--font-weight-bold);
    color: white;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
